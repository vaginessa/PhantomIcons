<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/accentColor</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/splash_screen_bg_color</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:navigationBarColor">@color/navigationBarBgColor</item>
        <item name="android:statusBarColor">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/accentColor</item>
        <item name="android:colorBackground">@color/splash_screen_bg_color</item>
        <item name="android:textColorSecondary">@color/cardview_light_background</item>
        <item name="android:colorForeground">@color/cardview_light_background</item>
        <item name="colorPrimaryDark">@color/card1_desc</item>
        <item name="android:textColorSecondaryInverse">@color/card1_desc</item>
        <item name="android:textColorPrimaryInverse">@color/card1_desc</item>
    </style>

    <style name="AppTheme.Apply" parent="AppTheme">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColorDark</item>
    </style>

    <style name="AppTheme.Wallpaper" parent="AppTheme">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColorDark</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:statusBarColor">@color/splash_screen_bg_color</item>
        <item name="android:navigationBarColor">@color/splash_screen_bg_color</item>
    </style>

    <style name="phantom" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:colorBackground">@color/splash_screen_bg_color</item>
        <item name="android:navigationBarColor">@color/navigationBarBgColor</item>
        <item name="android:statusBarColor">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/primary_text_material_dark</item>
    </style>
</resources>